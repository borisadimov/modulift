@import 'nib'
@import '_settings'
global-reset()




html
  font-family: 'Helvetica Neue'
  font-weight: 300
  font-size: 16px
  +big()
    font-size: 18px
  +tablet()
    font-size: 14px

  a
    color: inherit
    text-decoration: none
    &:hover, &:active, &:visited
      color: inherit

.app, .modulift
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0

  *
    box-sizing: border-box

  .view-wrapper
    width: 100%
    height: 100%
