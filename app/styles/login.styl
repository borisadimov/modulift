@import 'nib'
@import 'settings'

.login
  min-width: 100%
  min-height: 100%
  background: url(/images/background.jpg) 50% 50% no-repeat
  background-size: cover

  padding: 5vmin
  flexy column nowrap
  position: relative

  .logotype
    flex: 1 1 auto
    color: white
    width: 180px
    flexy column nowrap
    justify-content: center
    align-items: center
    // padding-bottom: 2vh
    &-img
      width: 180px
      img
        width: 180px

    &-link
      width: 180px
      text-align: center
      margin-top: 10px
      font-size: 17px
      text-shadow: 1px 1px 0.4px rgba(0,0,0,0.5)

.flipped
  &-section
    flex 5 1 auto
    width 100%
    flexy row wrap
    justify-content space-between
    flex-wrap wrap
    align-items center
    flexy row nowrap
    justify center flex-start

  &-container
    // overflow: hidden
    perspective: 1000
    position: relative
    // min-width: 400px
    height: 17rem
    // padding: 30px 0



  &-card
    transform: rotateY(180deg)
    position: absolute
    width: 100%
    height: 100%
    transform-style: preserve-3d
    transition: all .6s ease

    .flipped-front, .flipped-back
      position: absolute
      width: 100%
      height: 100%
      backface-visibility: hidden
    .flipped-front
      transform: rotateY(0deg)

    .flipped-back
      transform: rotateY(180deg)

      .input-wrapper.email
        margin-top: 20px

  &.flipped
    .flipped-card
      transform: rotateY(0deg)
      .flipped-front
        transform: rotateY(0deg)




  &-inner
    flex 0 0 auto
    size 50vw auto
    background rgba(255,255,255,0.5)
    border-radius 4px
    color #fff
    padding 5vh 5vw
    shadow()

    .title
      regular 1.5rem 1.5rem
      margin-bottom 2rem

    h1
      font-size: 1.4rem
      text-align: center
      color: white
      margin-bottom: 2rem
      font-weight: 400

    p
      font-size: 1rem
      text-align: center
      color: white
      margin-bottom: 10px

    input
      width 100%
      border-radius 5px
      background rgba(255,255,255,0.4)
      border 1px solid #fff
      padding 0.7rem 1rem 0.6rem 1rem
      margin-bottom: 0.6rem
      light 1.2rem 1.4rem
      &:focus
        outline none


    input[type='submit']:not(.visible)
      width: 1px
      height: 1px
      opacity: 0
      position: absolute
      z-index: -50

    .submit.visible
      color: white
      light 1.2rem 2.2rem
      color: white
      display: flex
      justify-content: center
      align-items: center
      cursor: pointer
      border-radius: 3px
      font-size: 18px
      text-align: center
      cursor: pointer
      border 1px solid #fff

      &.spinning
        border none !important

      &.disabled
        opacity: .3
        pointer-events: none


    .input-bottom
      margin-top 2rem









