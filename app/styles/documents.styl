@import 'nib'
@import 'settings'

.documents
  min-width 100%
  min-height 100%
  height 100%
  flexy column nowrap


  &-header
    flex: 0 0 60px
    background: #044B8D
    color: #fff
    position: relative
    text-align: center
    &-text
      padding-top: 20px
      medium 1rem

    &-goback
      position: absolute
      padding 0 40px 0 30px
      setPosition middle
      cursor pointer
      text-align center
      line-height 60px
      vertical-align middle
      &:hover
        color: darken(white,20%)
      &:after
        icon "\f3cf"
        font-size 1.6rem
        line-height 60px



  &-wrapper
    flex: 1 1 auto
    flexy row nowrap
    position relative
    overflow-y hidden
    overflow-x hidden
    align-content stretch
  &-menu
    flex 0 0 25vw
    +responds(900px)
      flex 0 0 225px
    box-sizing border-box
    overflow auto
    flexy column nowrap
    align-content stretch
    justify-content flex-start
    border-right 1px solid dgrey
    background lgrey

    &-item
      flex 0 0 auto
      regular 1rem 4rem
      color #979797
      cursor: pointer
      position: relative
      flexy row nowrap

      &.current
        background: #044B8D
        color: white

      &-icon
        flex: 0 0 25%
        font-weight: 600
        color: #4A90E2
        font-size: 0.4rem
        line-height: 0.4rem
        position: relative
        flexy row nowrap
        justify-content: center
        align-items: center
        padding-top: 3px
        +tablet()
          font-size: 0.3rem

        &:before
          icon "\f12f"
          color: #4A90E2
          position: absolute
          font-size: 2.8rem
          left: 50%
          transform: translateX(-50%)
          top: 50%
          margin-top: -1.4rem
          +tablet()
            font-size: 2.4rem
            margin-top: -1.2rem
      &.current &-icon
        color: white
        &:before
          color: white



      &-label
        flex 1 0 auto
        border-bottom 1px solid dgrey
        position: relative

      &.current &-label
        border: none

      &-actions
        display: block
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 4rem
        text-align: right
        .download
          cursor: pointer
          display: inline-block
          margin-right: 0.6rem
          &:hover
            color: #EDC222
          &:before
            icon "\f407"
            font-size: 1.6rem
            line-height: inherit
            margin-top: 2px


        &.favorited
          icon "\f4b3"






  &-preview
    display block
    flex 1
    overflow-y auto
    background white
    position relative
    padding 2vw 2vw 2vw 2vw


