@import '_settings'

.index
  min-width: 100%
  min-height: 100%
  // background: url(/images/background.png) 50% 50% no-repeat
  background: url(/images/background.jpg) 50% 50% no-repeat
  background-size: cover

  padding: 5vmin
  display: flex
  flex-direction: column
  position: relative

  .logotype
    flex: 2 1 auto
    color: white
    width: 180px
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    // padding-bottom: 2vh
    &-img
      width: 180px
      img
        width: 180px

    &-link
      width: 180px
      text-align: center
      margin-top: 10px
      font-size: 17.5px
      shadow()

  &-menu
    flex: 1 1 auto
    width: 100%
    display: flex
    justify-content: space-between
    flex-wrap: wrap
    align-items: center

    &-item
      flex: 0 0 20vw
      height: 20vw
      margin: 1.1vw 0
      overflow: hidden
      transform: translate3d(0,0,0)
      border-radius: 10px
      background-color: rgba(255,255,255,0.3)
      transition: background-color 0.1s ease
      text-align: center
      padding: 3.5vw 3.5vw 2.5vw 3.5vw
      +tablet()
        padding: 2vw 2vw 1vw 2vw
      box-sizing: border-box
      cursor: pointer
      display: flex
      flex-flow: column nowrap
      justify-content: space-between
      align-items: center

      &:hover
        background-color: rgba(0,0,0,0.3)

      &-icon
        flex 0 0 11vw
        display: flex
        width: 13vw
        height: 11vw
        justify-content: center
        align-items: center
        text-align: center
        +tablet()
          width: 8vw
          height: 7vw
        img
          width: 70%
          +tablet()
            width: 90%



      &-label
        flex 0 0 auto
        color: white
        text-shadow: 1px 1px 0.4px rgba(0,0,0,0.5)
        thin()



  .modal-overlay
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    background: url(/images/background-blured.jpg) 50% 50% no-repeat
    background-size: cover
    justify-content: center
    align-items: center
    flex-wrap: wrap
    overflow: hidden
    // display: none
    opacity: 0
    transition: opacity 0.2s ease
    pointer-events: none
    display: flex
    .modal-close
      cursor: pointer
      opacity: 0.9
      &:hover
        opacity: 1
      &:after
        icon "\f129"
        display block
        position absolute
        top: 6vmin
        right: 6vmin
        font-size: 3rem
        color: #fff

    .index-modal
      flex: 0 0 100vmin
      width: 100vmin
      height: 100vmin
      align-items: center
      justify-content: center
      display: none

      .subnav
        flex: 0 0 80vmin
        width: 80vmin
        height: 80vmin
        box-sizing: border-box
        display: flex
        flex-wrap: wrap
        justify-content: flex-start
        align-items: flex-start
        &-item
          border: 1px solid #fff
          border-radius: 15px
          flex: 0 0 36vmin
          width: 36vmin
          height: 36vmin
          margin: 2vmin
          display: flex
          justify-content: center
          align-items: center
          color: #fff
          padding: 20px
          text-align: center
          line-height: 1.8rem
          cursor: pointer
          transition: background-color 0.1s ease
          &:hover
            background-color: rgba(255,255,255,0.2)












