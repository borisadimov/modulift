@import 'nib'
@import 'settings'


.modal-overlay
  position: fixed
  z-index: 100
  top: 0
  left: 0
  right: 0
  bottom: 0
  background: url(/images/background-blured.jpg) 50% 50% no-repeat
  background-size: cover
  justify-content: center
  align-items: center
  flex-wrap: wrap
  overflow: hidden
  // display: none
  opacity: 0
  transition: opacity 0.2s ease
  pointer-events: none
  display flex

  &.gallery
    background: rgba(0,0,0,0.7)

  &.showed
    display flex
    pointer-events auto
    opacity 1


  .photobox
    position absolute
    size 90vmin
    setPosition perfect
    &-item
      text-align center
      size 100%
      display none
      justify center center
      img
        max-width 100%
        max-height 100%
      &.current
        flexy row nowrap

  .videobox
    position absolute
    max-width 70%
    max-height 100%
    setPosition perfect
    &-item
      text-align center
      size 100%
      display none
      justify center center
      img
        max-width 100%
        max-height 100%
      &.current
        flexy row nowrap


  .controlls
    position absolute
    top 0
    left 0
    size 100%
    font-size 3rem
    color #fff
    .left-arrow, .right-arrow
      opacity 0.8
      transition opacity 0.1s ease
      cursor pointer
      position absolute
      top 50%
      transform translateY(-50%)
      &:hover
        opacity 1

    .left-arrow
      left 6vmin
    .right-arrow
      right 6vmin






  .modal-close
    cursor: pointer
    opacity: 0.9
    &:hover
      opacity: 1
    &:after
      icon "\f129"
      display block
      position absolute
      top: 6vmin
      right: 6vmin
      font-size: 3rem
      color: #fff

  .index-modal
    flex: 0 0 100vmin
    width: 100vmin
    height: 100vmin
    align-items: center
    justify-content: center
    display: none

    &.showed
      flexy row nowrap

    .subnav
      flex: 0 0 80vmin
      width: 80vmin
      height: 80vmin
      box-sizing: border-box
      display: flex
      flex-wrap: wrap
      justify-content: flex-start
      align-items: flex-start
      &-item
        border: 1px solid #fff
        border-radius: 15px
        flex: 0 0 36vmin
        width: 36vmin
        height: 36vmin
        margin: 2vmin
        display: flex
        justify-content: center
        align-items: center
        color: #fff
        padding: 20px
        text-align: center
        line-height: 1.8rem
        cursor: pointer
        transition: background-color 0.1s ease
        +mobile()
          font-size: 0.8rem
          line-height: 1.5rem
        &:hover
          background-color: rgba(255,255,255,0.2)










